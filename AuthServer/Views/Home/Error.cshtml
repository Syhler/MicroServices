@model AuthServer.Models.ErrorModel
@{
    Layout = null;
}

<!DOCTYPE html>

<html lang="">
<head>
    <title>Error page</title>
    <link href="~/css/error-page.css" type="text/css" rel="stylesheet">
    <script type="application/javascript" src="~/vendor/jquery/jquery-3.2.1.min.js"></script>
</head>
<body>
<div>
    <div class="full-screen">
        <div class='container'>
            <span class="error-num">5</span>
            <div class='eye'></div>
            <div class='eye'></div>

            <p class="sub-text">It's me, not you! Something went wrong. We're <span class="italic">looking</span> to see what happened.</p>
            <a href="@Model.RedirectUrl">Go back</a>
        </div>
    </div>
</div>


<script src="~/js/error-page.js"></script>
</body>
</html>